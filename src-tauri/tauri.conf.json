  "productName": "BudChat",
  "version": "0.1.3",
  "identifier": "com.onepesostudio.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "BudChat - Friends Group Message",
        "width": 1920,
        "height": 1080
